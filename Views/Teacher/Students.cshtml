@model List<LMSTT.ViewModels.Teacher.TeacherStudentListItemViewModel>
@{
    ViewData["Title"] = "Students";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/Menu/Menu&Two.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    <link rel="stylesheet" href="~/css/TeacherFile/TeacherStudents/Students.css" />
</head>
<body>
    <div class="container">
        <div class="menu">
            <ul>
                <li class="image">
                    <div class="forimage">
                        <img src="~/css/Images/BOOKLOGO-Photoroom.png" alt="" />
                        <p class="text">campus</p>
                    </div>
                </li>
                <div class="line"></div>
                <li class="Dashboard">
                    <a href="@Url.Action("TeacherDashboard", "Teacher")">
                        <i class="fa fa-address-card"></i>
                        <p>Dashboard</p>
                    </a>
                </li>
                <li class="students">
                    <a href="@Url.Action("Students", "Teacher")">
                        <i class="fa-solid fa-graduation-cap"></i>
                        <p>students</p>
                    </a>
                </li>
                <li class="courses">
                    <a href="@Url.Action("Courses", "Teacher")">
                        <i class="fa-solid fa-laptop-code"></i>
                        <p>courses</p>
                    </a>
                </li>
                <li class="quizzes">
                    <a href="@Url.Action("TeacherQuizzesView", "Quiz")">
                        <i class="fa fa-book"></i>
                        <p>Quiz</p>
                    </a>
                </li>
                <li class="tasks">
                    <a href="@Url.Action("TeacherAssignments", "Assignment")">
                        <i class="fa-solid fa-list-check"></i>
                        <p>Tasks</p>
                    </a>
                </li>
                <div class="line bottom"></div>
                <li class="personinfo">
                    <div class="personimg">
                        <img src="~/css/Images/profilephoto.jpg" />
                    </div>
                    <div class="name">
                        <p>@User.Identity?.Name</p>
                        <span>Teacher</span>
                    </div>
                </li>
            </ul>
        </div>
        <div class="two">
            <div class="main">
                <div class="nav">
                    <div class="text">
                        <p>Student List</p>
                    </div>
                    <div class="buttons">
                        <button onclick="location.href='@Url.Action("Logout", "Account")'">
                            <i class="fa fa-sign-out"></i>
                        </button>
                        <button>
                            <i class="fa-regular fa-bell"></i>
                        </button>
                        <button>
                            <i class="fa-regular fa-message"></i>
                        </button>
                    </div>
                </div>
                <div class="table">
                    <table>
                        <thead>
                            <tr>
                                <td class="stuname">Id</td>
                                <td class="email">Name</td>
                                <td class="exten"></td>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="person">
                                            <div class="personimg">
                                                <img src="~/css/Images/profilephoto.jpg" alt="" />
                                            </div>
                                            <div class="personname">@item.StudentName</div>
                                        </div>
                                    </td>
                                    <td class="courname">@item.CourseName</td>
                                    <td class="del">
                                        <form asp-action="RemoveStudent" asp-route-studentId="@item.StudentId" asp-route-courseId="@item.CourseId" method="post" style="display:inline;">
                                            <button type="submit" class="del">delete</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <td class="prev"><button>previous</button></td>
                                <td></td>
                                <td class="next"><button>next</button></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
