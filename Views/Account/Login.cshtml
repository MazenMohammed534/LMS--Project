@model LMSTT.ViewModels.Account.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login Page</title>
    <link rel="stylesheet" href="~/css/Login&Register/login.css" />
</head>
<body>
    <div class="login-container">
        <div class="login-box">
            <img src="~/css/Images/Logo.jpg" alt="Campus Logo" class="logo" />
            <h2>Login Your Account</h2>
            <form asp-controller="Account" asp-action="Login" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>

                <label asp-for="Email">Email</label>
                <input asp-for="Email" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger"></span>

                <label asp-for="Password">Password</label>
                <input asp-for="Password" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger"></span>

                <button type="submit">Login</button>
            </form>
            <p class="Register-redirect">
                Don't have an account? <a asp-controller="Account" asp-action="Register">Register</a>
            </p>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>