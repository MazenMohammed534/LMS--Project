@model LMSTT.ViewModels.Admin.AdminDashboardViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="~/css/menu/menu&two.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link href="~/css/adminfile/admindashboard/dashboard.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="menu">
            <ul>
                <li class="image">
                    <div class="forimage">
                        <img src="~/css/Images/BOOKLOGO-Photoroom.png" alt="">
                        <p class="text">campus</p>
                    </div>
                </li>
                <div class="line"></div>
                <li class="Dashboard">
                    <a href="@Url.Action("AdminDashboard", "Admin")">
                        <i class="fa fa-address-card"></i>
                        <p>Dashboard</p>
                    </a>
                </li>
                <li class="admins">
                    <a href="@Url.Action("AdminView", "Admin")">
                        <i class='fas fa-user-shield'></i>
                        <p>admins</p>
                    </a>
                </li>
                <li class="teachers">
                    <a href="@Url.Action("TeacherView", "Admin")">
                        <i class="fa-solid fa-person-chalkboard"></i>
                        <p>teachers</p>
                    </a>
                </li>
                <li class="students">
                    <a href="@Url.Action("ViewStudent", "Admin")">
                        <i class="fa-solid fa-graduation-cap"></i>
                        <p>students</p>
                    </a>
                </li>
                <li class="courses">
                    <a href="@Url.Action("ViewCourse", "Admin")">
                        <i class="fa-solid fa-laptop-code"></i>
                        <p>courses</p>
                    </a>
                </li>
                <li class="departments">
                    <a href="@Url.Action("ViewDepartments", "Admin")">
                        <i class='far fa-window-restore'></i>
                        <p>departments</p>
                    </a>
                </li>
                <div class="line bottom"></div>
                <li class="personinfo">
                    <div class="personimg">
                    <img src="~/css/images/profilephoto.jpg" />
                    </div>
                    <div class="name">
                        <p>@User.Identity.Name</p>
                        <span>Admin</span>
                    </div>
                </li>
            </ul>
        </div>
        <!--MENU -->
        <div class="two">
            <div class="main">
                <div class="nav">
                    <div class="text">
                        <p>dashboard</p>
                        <span>Welcome to the Learning Management System<span>
                    </div>
                    <div class="buttons">
                        <button onclick="location.href='@Url.Action("Logout", "Account")'">
                            <i class="fa fa-sign-out"></i>
                        </button>
                        <button>
                            <i class="fa-regular fa-bell"></i>
                        </button>
                        <button>
                            <i class="fa-regular fa-message"></i>
                        </button>
                    </div>
                    <!--buttons-->
                </div>
                <!--NAV-->
                <div class="boxinfo">
                    <div class="box">
                        <div class="num">
                            <p>total students</p>
                            <span class="studentnum">@Model.TotalStudents</span>
                        </div>
                        <div class="blue icon">
                            <i class="fa-solid fa-graduation-cap"></i>
                        </div>
                    </div>
                    <div class="box">
                        <div class="num">
                            <p>total teachers</p>
                            <span class="coursenum">@Model.TotalTeachers</span>
                        </div>
                        <div class="icon bpink">
                            <i class="fa-solid fa-person-chalkboard"></i>
                        </div>
                    </div>
                    <div class="box">
                        <div class="num">
                            <p>total courses</p>
                            <span class="tasknum">@Model.TotalCourses</span>
                        </div>
                        <div class="icon orange">
                            <i class="fa-solid fa-laptop-code"></i>
                        </div>
                    </div>
                </div>
                <!--BOX INFO-->
                <div class="details">
                    <div class="cont">
                        <p>course progress :</p>
                        <span class="cousreperc">90%</span>
                    </div>
                    <div class="cont">
                        <p>attendance progress :</p>
                        <span class="attenperc">97%</span>
                    </div>
                    <div class="cont">
                        <p>assignment progress :</p>
                        <span class="assigperc">10%</span>
                    </div>
                    <div class="cont">
                        <p>student progress :</p>
                        <span class="studentperc">50%</span>
                    </div>
                </div>
                <!--DETAILS-->
            </div>
            <!-- MAIN -->
        </div>
        <!--TWO-->
    </div>
    <!--Container-->
</body>
</html>