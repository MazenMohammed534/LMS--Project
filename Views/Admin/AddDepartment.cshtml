@model LMSTT.ViewModels.Admin.AddDepartmentViewModel
@{
    ViewData["Title"] = "Add Department";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Department</title>
    <link rel="stylesheet" href="~/css/Menu/Menu&Two.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    <link rel="stylesheet" href="~/css/AdminFile/AdminDepartment/AddDepartment.css" />
  </head>
  <body>
    <div class="container">
      <div class="menu">
        <ul>
          <li class="image">
            <div class="forimage">
              <img src="~/css/Images/BOOKLOGO-Photoroom.png" alt="" />
              <p class="text">campus</p>
            </div>
          </li>
          <div class="line"></div>
          <li class="Dashboard">
            <a href="@Url.Action("AdminDashboard", "Admin")">
              <i class="fa fa-address-card"></i>
              <p>Dashboard</p></a>
          </li>
          <li class="admins">
            <a href="@Url.Action("AdminView", "Admin")">
              <i class="fas fa-user-shield"></i>
              <p>admins</p></a>
          </li>
          <li class="teachers">
            <a href="@Url.Action("TeacherView", "Admin")">
              <i class="fa-solid fa-person-chalkboard"></i>
              <p>teachers</p></a>
          </li>
          <li class="students">
            <a href="@Url.Action("ViewStudent", "Admin")">
              <i class="fa-solid fa-graduation-cap"></i>
              <p>students</p></a>
          </li>
          <li class="courses">
            <a href="@Url.Action("ViewCourse", "Admin")">
              <i class="fa-solid fa-laptop-code"></i>
              <p>courses</p></a>
          </li>
          <li class="departments">
            <a href="@Url.Action("ViewDepartments", "Admin")">
            <i class='far fa-window-restore'></i>
              <p>departments</p></a>
          </li>
          <div class="line bottom"></div>
          <li class="personinfo">
            <div class="personimg">
              <img src="~/css/Images/profilephoto.jpg" />
            </div>
            <div class="name">
              <p>@User.Identity.Name</p>
              <span>Admin</span>
            </div>
          </li>
        </ul>
      </div>
      <!--MENU -->
      <div class="two">
        <div class="main">
          <div class="nav">
            <div class="buttons">
              <button onclick="location.href='@Url.Action("Logout", "Account")'">
                <i class="fa fa-sign-out"></i>
              </button>
              <button>
                <i class="fa-regular fa-bell"></i>
              </button>
              <button>
                <i class="fa-regular fa-message"></i>
              </button>
            </div>
            <!--ICONS-->
          </div>
          <!--NAV-->
          <div class="text">add department</div>
          <div class="form">
            <form asp-action="AddDepartment" method="post">
              <label for="name">Department Name</label>
              <input type="text" id="name" name="name" />
              @if (ViewData.ModelState["Name"]?.Errors.Count > 0)
              {
                  <span style="color:red">@ViewData.ModelState["Name"].Errors[0].ErrorMessage</span>
              }
              <input type="submit" value="add" class="subbutton" />
            </form>
          </div>
        </div>
        <!-- MAIN -->
      </div>
      <!--TWO-->
    </div>
    <!--Container-->
  </body>
</html>
